{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Add new item to collection",
  "description": "Add a collection item to watch history",
  "default": {},
  "examples": [
    {
      "api_name": "tmdb",
      "api_id": "123"
    }
  ],
  "additionalProperties": false,
  "properties": {
    "api_name": {
      "$id": "#/properties/api_name",
      "type": "string",
      "title": "Item API name",
      "description": "The name of the third party API to use for this item post"
    },
    "api_id": {
      "$id": "#/properties/api_name",
      "type": "string",
      "title": "Item API ID",
      "description": "The item ID from the third party API"
    },
    "rating": {
      "$id": "#/properties/rating",
      "type": "integer",
      "title": "Rating",
      "description": "Rate the collection item 1-10",
      "minimum": 1,
      "maximum": 10
    },
    "overview": {
      "$id": "#/properties/overview",
      "type": "string",
      "title": "Overview",
      "description": "Own overview for the item",
      "maxLength": 5000
    },
    "review": {
      "$id": "#/properties/review",
      "type": "string",
      "title": "Review",
      "description": "Review for the item",
      "maxLength": 80000
    },
    "dates_watched": {
      "$id": "#/properties/name",
      "type": "array",
      "title": "Watch date(s)",
      "description": "One or more dates this item was watched",
      "items": {
        "type": "string",
        "format": "date-time"
      }
    },
    "status": {
      "$id": "#/properties/status",
      "type": "string",
      "title": "Watch status",
      "description": "Watch status of the item",
      "enum": [
        "finished",
        "following",
        "watching",
        "dropped"
      ]
    }
  },
  "required": [
    "api_name",
    "api_id"
  ]
}